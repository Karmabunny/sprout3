        <column name="cat_id" type="INT UNSIGNED" allownull="0" />
        <column name="record_order" type="TINYINT UNSIGNED" allownull="0" default="0" />

        <primary>
            <col name="demo_item_id" />
            <col name="cat_id" />
        </primary>
        <index>
            <col name="demo_item_id" />
