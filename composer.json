{
    "$schema": "https://getcomposer.org/schema.json",
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "vendor-dir": "src/vendor"
    },
    "autoload": {
        "psr-4": {
            "Sprout\\": "src/sprout",
            "SproutModules\\Karmabunny\\": "src/modules"
        },
        "files": [
            "src/sprout/composer_bootstrap.php"
        ]
    },
    "require": {
        "davechild/textstatistics": "^1.0",
        "phpmailer/phpmailer": "^6.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^7"
    },
    "scripts": {
        "test": "phpunit"
    }
}
